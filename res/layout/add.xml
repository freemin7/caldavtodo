<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/add" 
	android:layout_height="wrap_content"
	android:padding="0dp"
	android:layout_width="fill_parent"
	android:background="@color/color" android:orientation="vertical">
    <EditText android:id="@+id/addTodoText" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1">
        <requestFocus></requestFocus>
    </EditText>

    <Button android:text="OK" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/addOkButton"></Button>
    
</LinearLayout>